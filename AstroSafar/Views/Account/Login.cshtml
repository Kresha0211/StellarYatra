@model AstroSafar.Models.Registration


@{
    ViewData["Title"] = "Login";
    var returnUrl = Context.Request.Query["returnUrl"];
}

 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <style>
        body {
            background: url('https://source.unsplash.com/1600x900/?galaxy,universe') no-repeat center center fixed;
            background-size: cover;
            background-color: lavender;
            font-family: 'Poppins', sans-serif;
        }

        .registration-container {
            max-width: 600px;
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.15);
            margin: 50px auto;
        }

        h2 {
            text-align: center; /* Center the "Login" text */
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 8px;
            text-align: left; /* Left-align the label */
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #ccc;
            transition: all 0.3s ease-in-out;
            width: 100%;
            margin-bottom: 15px;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
            }

        .btn-primary {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            transition: 0.3s;
            font-size: 18px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, #0056b3, #003f7f);
                transform: scale(1.05);
            }

        .footer-text {
            margin-top: 20px;
            font-size: 16px;
            text-align: center;
        }

            .footer-text a {
                font-weight: bold;
                color: #007bff;
            }
    </style>
</head>
<body>
   

 
    <div class="registration-container">
        <h2>Login </h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">Password:</label>
                <input asp-for="Password" class="form-control" type="password" id="passwordInput" />

                <span class="toggle-password" id="togglePassword">&#128065;</span> <!-- Eye icon -->
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>

        <div class="footer-text">
            <a href="@Url.Action("Register", "Account")">Sign Up</a>
        </div>
    </div>
    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');

        togglePassword.addEventListener('click', function () {
            // Toggle the type attribute
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            // Toggle the eye icon
            this.textContent = type === 'password' ? '\u{1F441}' : '\u{1F440}'; // Change icon based on visibility
        });
    </script>
</body>
</html>
 


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --space-light: #f0f5ff;
            --deep-sky: #e6f0ff;
            --nebula-purple-light: #c5b3dd;
            --cosmic-blue-light: #6699cc;
            --star-color: #4d94ff;
            --meteor-orange-light: #ff9966;
            --moon-silver: #e6e6e6;
            --planet-ring-light: rgba(102, 153, 204, 0.15);
            --heading-color: #007bff;
        }

        /* Basic styles */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, var(--space-light) 0%, var(--deep-sky) 100%);
            color: #333;
            margin: 0;
            padding: 0; /* Remove padding to allow full-width header */
            text-align: center;
        }

        .heading-title {
            color: var(--heading-color);
            text-align: center;
            font-weight: bold;
            width: 100%; /* Ensure it spans the full width */
            margin: 0; /* Remove default margin */
            padding: 20px 0; /* Add padding for better spacing */
/*             background-color: var(--cosmic-blue-light); /* Optional: Add a background color */
            /*  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: Add a shadow for depth */ */
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        form {
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .question {
            margin-bottom: 20px;
        }

            .question p {
                font-size: 1.1em;
                margin-bottom: 10px;
            }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 1em;
        }

        input[type="radio"] {
            margin-right: 10px;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: var(--cosmic-blue-light);
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1em;
            cursor: pointer;
        }

            button:hover {
                background-color: var(--star-color);
            }

        #result {
            text-align: center;
            margin-top: 20px;
            font-weight: bold;
            color: #2c3e50;
        }
    </style>
</head>
<body>

    <!-- Self-Assessment Quiz Section -->
    <h1 class="heading-title">Space Exploration Self-Assessment</h1>

    <form id="quiz-form">
        <!-- Question 1 -->
        <div class="question">
            <p>1. What is the closest planet to the Sun?</p>
            <label><input type="radio" name="question1" value="Mercury"> Mercury</label><br>
            <label><input type="radio" name="question1" value="Venus"> Venus</label><br>
            <label><input type="radio" name="question1" value="Earth"> Earth</label><br>
            <label><input type="radio" name="question1" value="Mars"> Mars</label><br>
        </div>

        <!-- Question 2 -->
        <div class="question">
            <p>2. Who was the first human to land on the Moon?</p>
            <label><input type="radio" name="question2" value="Neil Armstrong"> Neil Armstrong</label><br>
            <label><input type="radio" name="question2" value="Buzz Aldrin"> Buzz Aldrin</label><br>
            <label><input type="radio" name="question2" value="Yuri Gagarin"> Yuri Gagarin</label><br>
            <label><input type="radio" name="question2" value="John Glenn"> John Glenn</label><br>
        </div>

        <!-- Question 3 -->
        <div class="question">
            <p>3. What is the largest planet in our solar system?</p>
            <label><input type="radio" name="question3" value="Jupiter"> Jupiter</label><br>
            <label><input type="radio" name="question3" value="Saturn"> Saturn</label><br>
            <label><input type="radio" name="question3" value="Neptune"> Neptune</label><br>
            <label><input type="radio" name="question3" value="Uranus"> Uranus</label><br>
        </div>

        <!-- Question 4 -->
        <div class="question">
            <p>4. What is the name of the NASA space telescope that helped discover the age of the universe?</p>
            <label><input type="radio" name="question4" value="Hubble Space Telescope"> Hubble Space Telescope</label><br>
            <label><input type="radio" name="question4" value="James Webb Space Telescope"> James Webb Space Telescope</label><br>
            <label><input type="radio" name="question4" value="Chandra X-ray Observatory"> Chandra X-ray Observatory</label><br>
            <label><input type="radio" name="question4" value="Spitzer Space Telescope"> Spitzer Space Telescope</label><br>
        </div>

        <!-- Question 5 -->
        <div class="question">
            <p>5. Which planet is known as the "Red Planet"?</p>
            <label><input type="radio" name="question5" value="Mars"> Mars</label><br>
            <label><input type="radio" name="question5" value="Venus"> Venus</label><br>
            <label><input type="radio" name="question5" value="Earth"> Earth</label><br>
            <label><input type="radio" name="question5" value="Jupiter"> Jupiter</label><br>
        </div>

        <!-- Additional Questions (6 to 10) -->
        <div class="question">
            <p>6. What is the name of NASA's rover that landed on Mars in 2021?</p>
            <label><input type="radio" name="question6" value="Perseverance"> Perseverance</label><br>
            <label><input type="radio" name="question6" value="Curiosity"> Curiosity</label><br>
            <label><input type="radio" name="question6" value="Opportunity"> Opportunity</label><br>
            <label><input type="radio" name="question6" value="Spirit"> Spirit</label><br>
        </div>

        <div class="question">
            <p>7. Which planet has the most moons?</p>
            <label><input type="radio" name="question7" value="Jupiter"> Jupiter</label><br>
            <label><input type="radio" name="question7" value="Saturn"> Saturn</label><br>
            <label><input type="radio" name="question7" value="Uranus"> Uranus</label><br>
            <label><input type="radio" name="question7" value="Neptune"> Neptune</label><br>
        </div>

        <div class="question">
            <p>8. What is the main component of the Sun?</p>
            <label><input type="radio" name="question8" value="Hydrogen"> Hydrogen</label><br>
            <label><input type="radio" name="question8" value="Helium"> Helium</label><br>
            <label><input type="radio" name="question8" value="Oxygen"> Oxygen</label><br>
            <label><input type="radio" name="question8" value="Nitrogen"> Nitrogen</label><br>
        </div>

        <div class="question">
            <p>9. The Great Red Spot is a storm on which planet?</p>
            <label><input type="radio" name="question9" value="Jupiter"> Jupiter</label><br>
            <label><input type="radio" name="question9" value="Saturn"> Saturn</label><br>
            <label><input type="radio" name="question9" value="Mars"> Mars</label><br>
            <label><input type="radio" name="question9" value="Neptune"> Neptune</label><br>
        </div>

        <div class="question">
            <p>10. What was the name of the first artificial satellite?</p>
            <label><input type="radio" name="question10" value="Sputnik 1"> Sputnik 1</label><br>
            <label><input type="radio" name="question10" value="Explorer 1"> Explorer 1</label><br>
            <label><input type="radio" name="question10" value="Vanguard 1"> Vanguard 1</label><br>
            <label><input type="radio" name="question10" value="Apollo 11"> Apollo 11</label><br>
        </div>

        <button type="button" onclick="checkAnswers()">Submit Answers</button>
    </form>

    <div id="result" style="margin-top: 20px; font-weight: bold;"></div>

    <script>
        // Function to check quiz answers
        function checkAnswers() {
            // Correct answers
            const correctAnswers = {
                question1: 'Mercury',
                question2: 'Neil Armstrong',
                question3: 'Jupiter',
                question4: 'Hubble Space Telescope',
                question5: 'Mars',
                question6: 'Perseverance',
                question7: 'Jupiter',
                question8: 'Hydrogen',
                question9: 'Jupiter',
                question10: 'Sputnik 1'
            };

            // Get selected answers
            const form = document.getElementById('quiz-form');
            const userAnswers = {
                question1: form.question1.value,
                question2: form.question2.value,
                question3: form.question3.value,
                question4: form.question4.value,
                question5: form.question5.value,
                question6: form.question6.value,
                question7: form.question7.value,
                question8: form.question8.value,
                question9: form.question9.value,
                question10: form.question10.value
            };

            // Check if all questions have been answered
            for (let question in correctAnswers) {
                if (!userAnswers[question]) {
                    alert("Please answer all questions before submitting.");
                    return; // Stop execution if any question is unanswered
                }
            }

            let score = 0;
            let resultText = 'Your Results:<br>';

            // Check answers and calculate score
            for (let question in correctAnswers) {
                if (userAnswers[question] === correctAnswers[question]) {
                    score++;
                    resultText += `${question} - Correct!<br>`;
                } else {
                    resultText += `${question} - Incorrect.<br>`;
                }
            }

            // Show result
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = resultText + `<br><strong>Your score: ${score} out of 10</strong>`;
        }
    </script>

</body>
</html>
@{
    ViewData["Title"] = "Course Guidelines";
}

<div class="container mt-4">
    <h2 class="text-center">Course Guidelines</h2>
    <p class="text-center">Follow these guidelines to make the most out of your learning experience.</p>

    <div class="row mt-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Welcome to Space Learning!</h5>
                    <p class="card-text">Explore the wonders of the universe with our structured courses.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Course Structure</h5>
                    <p class="card-text">The course is divided into modules covering planets, stars, galaxies, and more.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Interactive Learning</h5>
                    <p class="card-text">Engage with quizzes, videos, and interactive simulations.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Assessment & Certification</h5>
                    <p class="card-text">Complete assessments to earn certificates for each module.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Support & Community</h5>
                    <p class="card-text">Join our discussion forums and get support from experts.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        padding: 15px;
    }

    .card-title {
        font-weight: bold;
    }
</style>

@model List<Earthquake>

<h2>Recent Earthquakes</h2>

@if (Model != null && Model.Count > 0)
{
    @foreach (var quake in Model)
    {
        <div class="earthquake-article">
            <h3>Earthquake in @quake.Location</h3>
            <p><strong>Magnitude:</strong> @quake.Magnitude</p>
            <p><strong>Time:</strong> @quake.Time.ToString("g")</p>
            <hr />
        </div>
    }
}
else
{
    <p>No recent earthquake data available.</p>
}

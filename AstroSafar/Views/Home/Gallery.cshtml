
@{
    ViewData["Title"] = "Gallery";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --space-light: #f0f5ff;
            --deep-sky: #e6f0ff;
            --nebula-purple-light: #c5b3dd;
            --cosmic-blue-light: #6699cc;
            --star-color: #4d94ff;
            --meteor-orange-light: #ff9966;
            --moon-silver: #e6e6e6;
            --planet-ring-light: rgba(102, 153, 204, 0.15);
            --text-dark: #112d4e;
            --text-accent: #3a6ea5;
            --heading-color: #007bff;
            --course-bg: #ffffff;
            --course-shadow: rgba(0, 0, 0, 0.1);
        }

        body {
            background: linear-gradient(135deg, var(--space-light) 0%, var(--deep-sky) 100%);
            font-family: Arial, sans-serif;
            color: var(--text-dark);
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .gallery-title {
            margin-top: 20px;
            font-size: 2.5em;
            text-transform: uppercase;
            font-weight: bold;
            color: var(--heading-color);
        }

        .gallery-container {
            position: relative;
            max-width: 90%;
            height: 450px;
            margin: 20px auto;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
        }

        .gallery-slider {
            display: flex;
            transition: transform 0.5s ease-in-out;
            height: 100%;
        }

        .slide {
            min-width: 100%;
            height: 100%;
        }

            .slide img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 10px;
            }

        .prev, .next {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 15px;
            cursor: pointer;
            font-size: 18px;
            border-radius: 50%;
            transition: background-color 0.3s;
        }

            .prev:hover, .next:hover {
                background-color: rgba(0, 0, 0, 0.8);
            }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .dots {
            text-align: center;
            margin-top: 15px;
        }

        .dot {
            display: inline-block;
            height: 10px;
            width: 10px;
            margin: 0 5px;
            background-color: var(--moon-silver);
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .dot.active {
                background-color: var(--cosmic-blue-light);
            }

        .scroll-down {
            margin-top: 20px;
        }

            .scroll-down a {
                display: inline-block;
                color: var(--text-accent);
                font-size: 18px;
                text-decoration: none;
                padding: 10px 20px;
                border: 2px solid var(--text-accent);
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .scroll-down a:hover {
                    background-color: var(--text-accent);
                    color: white;
                }

        .about-us {
            background-color: white;
            padding: 50px 20px;
            margin-top: 50px;
            border-radius: 15px;
            box-shadow: 0px 0px 20px var(--planet-ring-light);
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

            .about-us h2 {
                font-size: 2.5em;
                color: var(--heading-color);
                margin-bottom: 25px;
                border-bottom: 2px solid var(--nebula-purple-light);
                padding-bottom: 10px;
                display: inline-block;
            }

            .about-us p {
                font-size: 1.2em;
                max-width: 80%;
                margin: 0 auto;
                line-height: 1.6;
                color: var(--text-dark);
            }

            .about-us strong {
                color: var(--text-accent);
            }

        .course-section {
            margin-top: 40px;
            padding: 20px;
        }

            .course-section h3 {
                font-size: 1.8em;
                color: var(--heading-color);
                margin-bottom: 30px;
            }

        .course-category {
            background-color: var(--space-light);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px var(--course-shadow);
            margin-bottom: 20px;
        }

            .course-category h4 {
                font-size: 1.5em;
                color: var(--text-accent);
                margin-bottom: 15px;
            }

            .course-category ul {
                list-style-type: none;
                padding: 0;
            }

            .course-category li {
                font-size: 1.1em;
                padding: 5px 0;
                color: var(--text-dark);
            }

        .closing-text {
            font-size: 1.4em;
            margin-top: 40px;
            font-weight: bold;
            color: var(--text-accent);
            background-color: var(--space-light);
            padding: 15px;
            border-radius: 10px;
            display: inline-block;
        }

        :root {
            --text-accent: #2c3e50;
            --text-dark: #34495e;
            --meteor-orange-light: #e67e22;
            --cosmic-blue-light: #3498db;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            border-radius: 8px;
            width: 50%;
            max-width: 400px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            text-align: center;
        }

        .close-modal {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close-modal:hover {
                color: black;
            }

        .modal-buttons {
            margin-top: 20px;
        }

        .modal-button {
            padding: 8px 16px;
            margin: 0 10px;
            border-radius: 4px;
            cursor: pointer;
        }

        .explore-button {
            background-color: var(--cosmic-blue-light);
            color: white;
            border: none;
        }

        .cancel-button {
            background-color: #e0e0e0;
            border: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <!-- Gallery Title -->
    <h2 class="gallery-title">🚀 Space & Research Gallery</h2>

    <!-- Image Gallery -->
    <div class="gallery-container">
        <div class="gallery-slider">
            <div class="slide"><img src="~/Images/Space1.jpg" alt="Galaxy"></div>
            <div class="slide"><img src="~/Images/Space3.jpg" alt="Nebula"></div>
            <div class="slide"><img src="~/Images/Space4.jpg" alt="Mars Surface"></div>
            <div class="slide"><img src="~/Images/Space2.jpg" alt="Telescope"></div>
        </div>

        <!-- Navigation Buttons -->
        <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
        <button class="next" onclick="moveSlide(1)">&#10095;</button>
    </div>

    <!-- Dots Navigation -->
    <div class="dots">
        <span class="dot" onclick="jumpToSlide(0)"></span>
        <span class="dot" onclick="jumpToSlide(1)"></span>
        <span class="dot" onclick="jumpToSlide(2)"></span>
        <span class="dot" onclick="jumpToSlide(3)"></span>
    </div>

    <!-- Scroll Down to About Us -->
    <div class="scroll-down">
        <a href="#about-section">▼ Scroll Down to Learn More ▼</a>
    </div>

    <!-- ABOUT US SECTION -->
    <section id="about-section" class="about-us">
        <h2>🌌 About AstroSafar</h2>
        <p>
            Welcome to <strong>AstroSafar</strong>, your gateway to the cosmos! We are dedicated to making space exploration accessible for students, educators, and enthusiasts.
            Whether you're a beginner fascinated by stars or an aspiring astrophysicist, our carefully curated courses will take you on a journey beyond Earth.
        </p>

        <!-- Course Categories -->
        <div class="course-section">
            <h3>📚 Our Course Categories</h3>

            <!-- Primary Courses -->
            <div class="course-category">
                <h4>🔭 Courses of Primary</h4>
                <ul>
                    <li>Exploring Our Solar System</li>
                    <li>The Wonders of Stars and Galaxies</li>
                    <li>The Moon: Earth's Companion</li>
                    <li>Black Holes Explained</li>
                    <li>A Cosmic Journey: The Universe for Beginners</li>
                    <li>Gravity and Motion in Space</li>
                </ul>
            </div>

            <!-- Secondary Courses -->
            <div class="course-category">
                <h4>🚀 Courses of Secondary</h4>
                <ul>
                    <li>Astrophysics & Space Technology</li>
                    <li>Space Exploration and Technology</li>
                    <li>Understanding the Universe</li>
                    <li>Space and Human Life</li>
                    <li>Deep Space Missions and Spacecraft</li>
                    <li>Space Farming: Growing Food Beyond Earth</li>
                </ul>
            </div>

            <!-- Higher Secondary Courses -->
            <div class="course-category">
                <h4>🌠 Courses of Higher Secondary</h4>
                <ul>
                    <li>Advanced Rocketry and Space Science</li>
                    <li>Astrodynamics and Orbital Mechanics</li>
                    <li>Future of Space Travel: Mars & Beyond</li>
                    <li>Quantum Mechanics and the Universe</li>
                    <li>The Multiverse Theory: Are We Alone?</li>
                    <li>Artificial Intelligence in Space Exploration</li>
                </ul>
            </div>
        </div>

        <p class="closing-text">
            🌍 Join us on this interstellar adventure and uncover the mysteries of the universe.
            <strong>Enroll today and take your first step towards the stars! 🚀</strong>
        </p>
    </section>

    <!-- BOOK STORE SECTION -->
    <section class="about-us" style="margin-top: 50px;">
        <h2>📚 Space & Astronomy Books</h2>
        <p>Expand your cosmic knowledge with these recommended books</p>

        <div class="course-section">
            <div class="course-category" style="text-align: left;">
                <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
                    <!-- Book 1 -->
                    <div style="background: white; border-radius: 8px; padding: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                        <img src="~/Images/cosmos.jpeg" alt="Cosmos" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;">
                        <h4 style="margin: 10px 0 5px; color: var(--text-accent);">Cosmos</h4>
                        <p style="color: var(--text-dark); margin: 0 0 10px; font-size: 0.9em;">by Carl Sagan</p>
                        <div style="color: var(--meteor-orange-light); margin-bottom: 10px;">★★★★☆</div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-weight: bold; color: var(--text-accent);">₹1000</span>
                            <a href="#" onclick="showModal('Cosmos'); return false;" style="background: var(--cosmic-blue-light); color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; text-decoration: none;">
                                Add to Cart
                            </a>
                        </div>
                    </div>

                    <!-- Book 2 -->
                    <div style="background: white; border-radius: 8px; padding: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                        <img src="~/Images/hurry2.jpeg" alt="Astrophysics for People in a Hurry" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;">
                        <h4 style="margin: 10px 0 5px; color: var(--text-accent);">Astrophysics for People in a Hurry</h4>
                        <p style="color: var(--text-dark); margin: 0 0 10px; font-size: 0.9em;">by Neil deGrasse Tyson</p>
                        <div style="color: var(--meteor-orange-light); margin-bottom: 10px;">★★★★★</div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-weight: bold; color: var(--text-accent);">₹1500</span>
                            <a href="#" onclick="showModal('Astrophysics for People in a Hurry'); return false;" style="background: var(--cosmic-blue-light); color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; text-decoration: none;">
                                Add to Cart
                            </a>
                        </div>
                    </div>

                    <!-- Book 3 -->
                    <div style="background: white; border-radius: 8px; padding: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                        <img src="~/Images/martain2.jpeg" alt="The Martian" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;">
                        <h4 style="margin: 10px 0 5px; color: var(--text-accent);">The Martian</h4>
                        <p style="color: var(--text-dark); margin: 0 0 10px; font-size: 0.9em;">by Andy Weir</p>
                        <div style="color: var(--meteor-orange-light); margin-bottom: 10px;">★★★★★</div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-weight: bold; color: var(--text-accent);">₹2000</span>
                            <a href="#" onclick="showModal('The Martian'); return false;" style="background: var(--cosmic-blue-light); color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; text-decoration: none;">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal Popup -->
    <div id="bookModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeModal()">&times;</span>
            <h3 id="modalTitle">Explore Book</h3>
            <p>Would you like to explore this book further before adding to cart?</p>
            <div class="modal-buttons">
                <button class="modal-button explore-button" onclick="redirectToExplore()">Explore Book</button>
                <button class="modal-button cancel-button" onclick="closeModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        let slideIndex = 0;
        let slides = document.querySelectorAll(".slide");
        let dots = document.querySelectorAll(".dot");
        let autoSlideInterval;

        function showSlide(index) {
            if (index >= slides.length) { slideIndex = 0; }
            if (index < 0) { slideIndex = slides.length - 1; }

            document.querySelector(".gallery-slider").style.transform = `translateX(${-slideIndex * 100}%)`;

            dots.forEach(dot => dot.classList.remove("active"));
            dots[slideIndex].classList.add("active");
        }

        function moveSlide(step) {
            slideIndex += step;
            showSlide(slideIndex);
            restartAutoSlide();
        }

        function jumpToSlide(index) {
            slideIndex = index;
            showSlide(slideIndex);
            restartAutoSlide();
        }

        function autoSlide() {
            slideIndex++;
            showSlide(slideIndex);
            autoSlideInterval = setTimeout(autoSlide, 3000);
        }

        function restartAutoSlide() {
            clearTimeout(autoSlideInterval);
            autoSlideInterval = setTimeout(autoSlide, 3000);
        }

        // Current selected book
        let currentBook = '';

        // Show modal function
        function showModal(bookTitle) {
            currentBook = bookTitle;
            document.getElementById('modalTitle').textContent = `Explore ${bookTitle}`;
            document.getElementById('bookModal').style.display = 'block';
        }

        // Close modal function
        function closeModal() {
            document.getElementById('bookModal').style.display = 'none';
        }

        // Redirect to explore page function
        function redirectToExplore() {
            // Close the modal first
            closeModal();
            // Redirect to the store/explore page
            window.location.href = '/store/explore';
        }

        // Close modal when clicking outside of it
        window.onclick = function (event) {
            const modal = document.getElementById('bookModal');
            if (event.target == modal) {
                closeModal();
            }
        }

        // Initialize
        showSlide(slideIndex);
        autoSlide();
    </script>
</body>
</html>
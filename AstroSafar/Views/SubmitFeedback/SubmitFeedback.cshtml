@model AstroSafar.Models.Feedback

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="text-center">
        <h2 class="text-primary">Contact For Any Query</h2>
        <p class="text-muted">We are here to help. Reach out to us anytime!</p>
    </div>

    <div class="row mt-4">
        <!-- Contact Information -->
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">📍 Office</h5>
                    <p class="card-text">AstroSafar Headquarters<br> 123 Space Lane, Galaxy City, Universe</p>

                    <h5 class="card-title text-primary">📧 Email</h5>
                    <p class="card-text">support@astrosafar.com</p>

                    <h5 class="card-title text-primary">📩 Special Inquiries</h5>
                    <p class="card-text">admin@astrosafar.com</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-7">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h4 class="text-center text-primary">Send Us a Message</h4>
                    <form asp-action="SubmitFeedback" method="post">
                        <div class="mb-3">
                            <label class="form-label">Your Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your name" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Your Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Write your message" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary w-100">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center mt-3">
            @TempData["Message"]
        </div>
    }
</div>

<!-- Footer -->
<footer class="text-center text-white mt-5 py-3 bg-dark">
    <p class="mb-0">&copy; 2025 AstroSafar. All rights reserved.</p>
</footer>

<style>
    body {
        background: url('~/images/space-background.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-title {
        font-weight: bold;
    }

    .text-primary {
        color: #007bff;
    }

    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
    }
</style>

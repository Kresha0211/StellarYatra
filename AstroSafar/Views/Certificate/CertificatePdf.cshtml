@model AstroSafar.Models.Certificate
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Certificate of Completion</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400&display=swap" rel="stylesheet">
    <style>
        
      @{
            Layout = null;
        }
        @@page {
            size: auto;
            margin: 0;
        }
        @@media print {
            body * {
                visibility: hidden;
            }
            .certificate, .certificate * {
                visibility: visible;
            }
        }
     body {
        margin: 0;
        padding: 0;
        background: #f0f0f0;
        font-family: 'Playfair Display', serif;
    }

    .certificate {
        width: 850px;
        margin: 40px auto;
        padding: 50px 40px;
        background: white;
        border: 20px solid #0a2342;
        position: relative;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        box-sizing: border-box;
        text-align: center;
    }

    .certificate::before {
        content: "";
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
        border: 2px solid #d4af37;
        pointer-events: none;
    }

    h1 {
        font-size: 40px;
        color: #0a2342;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .header-line {
        border-top: 2px solid #d4af37;
        width: 260px;
        margin: 15px auto 25px;
    }

    .intro {
        font-size: 17px;
        color: #555;
        margin-bottom: 10px;
    }

    .name {
        font-size: 34px;
        font-weight: bold;
        margin: 0;
        color: #0a2342;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .course {
        font-size: 20px;
        margin: 5px 0 0;
        color: #2c4f80;
        font-style: italic;
    }

    .app-description {
        font-family: 'Montserrat', sans-serif;
        font-size: 15px;
        line-height: 1.6;
        color: #555;
        max-width: 600px;
        margin: 25px auto 20px;
    }
    
        .signature-container {
            margin-top: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

    .signature {
        font-family: 'Brush Script MT', cursive;
        font-size: 24px;
        color: #0a2342;
        margin-top: 20px;
        margin-bottom: 0;
    }

    .footer {
        font-size: 14px;
        color: #777;
        margin-top: 5px;
        font-family: 'Montserrat', sans-serif;
    }

    .date-container {
        font-size: 14px;
        color: #555;
        margin-top: 15px;
        font-family: 'Montserrat', sans-serif;
    }

    .stamp {
            position: absolute;
            right: 80px;
            bottom: 80px;
            opacity: 0.8;
            width: 120px;
            height: 120px;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="none" stroke="%23d4af37" stroke-width="2"/><text x="50" y="40" text-anchor="middle" font-family="Arial" font-size="10" fill="%23d4af37">OFFICIAL</text><text x="50" y="55" text-anchor="middle" font-family="Arial" font-size="14" fill="%23d4af37" font-weight="bold">ASTROSAFAR</text><text x="50" y="70" text-anchor="middle" font-family="Arial" font-size="10" fill="%23d4af37">CERTIFICATION</text></svg>');
            background-repeat: no-repeat;
            transform: rotate(15deg);
        }
</style>

</head>
<body>
    <div class="certificate">
        <div class="planet space-decoration"></div>
        <div class="stamp"></div>

        <div class="certificate-content">
            <h1>CERTIFICATE OF<br />COMPLETION</h1>
            <div class="header-line"></div>
            <p class="intro">This certificate is proudly presented to</p>
            <div class="name">@Model.Enrollment.FullName</div>
            <p>for successfully completing the space learning course</p>
            <div class="course">"@Model.Enrollment.CourseAdmin.Name"</div>

            <div class="app-description">
                AstroSafar is committed to making space education accessible and engaging.
                This certificate recognizes the dedication to exploring the cosmos through
                our interactive learning platform that brings astronomy to life.
            </div>

            <div class="signature-container">
                <div class="signature">KVN</div>
                <p>Team AstroSafar</p>
                <p class="footer">support@astrosafar.com</p>
            </div>

            <div class="date-container">
                Issued on @Model.IssuedOn.ToString("MMMM dd, yyyy")
            </div>
        </div>
    </div>
</body>
</html>



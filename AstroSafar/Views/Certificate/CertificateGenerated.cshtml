

    @model AstroSafar.Models.Certificate

@{
    ViewData["Title"] = "Certificate | AstroSafar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&family=Exo+2:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --space-light: #f0f5ff;
            --deep-sky: #e6f0ff;
            --nebula-purple-light: #c5b3dd;
            --cosmic-blue-light: #6699cc;
            --star-color: #4d94ff;
            --meteor-orange-light: #ff9966;
            --moon-silver: #e6e6e6;
            --planet-ring-light: rgba(102, 153, 204, 0.15);
        }

        body {
            background: linear-gradient(135deg, var(--space-light) 0%, var(--deep-sky) 100%);
            color: #333;
            font-family: 'Exo 2', sans-serif;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(2px 2px at 40px 70px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)),
                            radial-gradient(2px 2px at 20px 100px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)),
                            radial-gradient(1px 1px at 90px 40px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)),
                            radial-gradient(1px 1px at 130px 80px, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0)),
                            radial-gradient(1px 1px at 160px 120px, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0));
            background-repeat: repeat;
            background-size: 200px 200px;
            opacity: 0.3;
            z-index: -1;
            animation: twinkle 8s ease-in-out infinite;
        }

        .planet {
            position: absolute;
            border-radius: 50%;
            filter: blur(1px);
        }

        .planet-1 {
            width: 180px;
            height: 180px;
            background: radial-gradient(circle at 30% 40%, #a3c2f5, #d1e1fa);
            top: 10%;
            right: -60px;
            box-shadow: 0 0 40px rgba(77, 148, 255, 0.2);
        }

        .planet-2 {
            width: 100px;
            height: 100px;
            background: radial-gradient(circle at 30% 40%, #e5c1d5, #f2e1ec);
            bottom: 5%;
            left: -30px;
            box-shadow: 0 0 30px rgba(255, 153, 102, 0.2);
        }

        .planet-ring {
            position: absolute;
            width: 240px;
            height: 50px;
            border-radius: 50%;
            border: 8px solid var(--planet-ring-light);
            top: 60px;
            right: -90px;
            transform: rotate(-20deg);
        }

        .logo {
            font-family: 'Orbitron', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: #4d5b9e;
            text-align: center;
            margin-bottom: 0.5rem;
            text-shadow: 0 0 10px rgba(77, 148, 255, 0.7);
        }

        .certificate-container {
            max-width: 700px;
            margin: 50px auto;
            padding: 40px;
            border-radius: 16px;
            background-color: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(100, 100, 100, 0.15);
            border: 1px solid rgba(200, 200, 200, 0.3);
            position: relative;
            z-index: 10;
        }

        .certificate-header {
            background: linear-gradient(135deg, rgba(102, 153, 204, 0.1) 0%, rgba(197, 179, 221, 0.1) 100%);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
            text-align: center;
            border: 1px dashed var(--cosmic-blue-light);
        }

        .btn-certificate {
            font-family: 'Orbitron', sans-serif;
            letter-spacing: 1px;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-download {
            background: linear-gradient(135deg, var(--cosmic-blue-light) 0%, var(--nebula-purple-light) 100%);
            border: none;
            color: white;
        }

        .btn-view {
            background: transparent;
            border: 2px solid var(--meteor-orange-light);
            color: var(--meteor-orange-light);
        }

        .btn-download:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 15px rgba(77, 148, 255, 0.3);
        }

        .user-nav {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-nav span {
            font-weight: 600;
            color: #4d5b9e;
        }

        .user-nav a {
            color: var(--meteor-orange-light);
            text-decoration: none;
            font-weight: 600;
        }

        .thank-you-message {
            font-size: 1.1rem;
            color: #555;
            text-align: center;
            margin-bottom: 20px;
            font-style: italic;
        }

        .footer {
            background-color: rgba(255, 255, 255, 0.7);
            padding: 20px 0;
            margin-top: 50px;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .quick-links a {
            color: #4d5b9e;
            text-decoration: none;
            transition: color 0.3s;
        }

        .quick-links a:hover {
            color: var(--meteor-orange-light);
        }

        .social-icons a {
            color: #4d5b9e;
            font-size: 1.5rem;
            margin: 0 10px;
            transition: color 0.3s;
        }

        .social-icons a:hover {
            color: var(--meteor-orange-light);
        }

        @@keyframes twinkle {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
        }
    </style>
</head>
<body>
    <!-- Space elements -->
    <div class="planet planet-1"></div>
    <div class="planet-ring"></div>
    <div class="planet planet-2"></div>

   
    <div class="certificate-container">
        <div class="logo">AstroSafar</div>

        <div class="certificate-header">
            <h2>Certificate Generated</h2>
            <p class="thank-you-message">
                Your achievement in space exploration has been officially recognized!
            </p>
        </div>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info text-center">
                @ViewBag.Message
            </div>
        }

        @if (Model?.Enrollment != null && Model.Enrollment.CourseAdmin != null)
        {
            <div class="text-center mb-4">
                <i class="fas fa-certificate fa-4x text-warning mb-3"></i>
                <p class="lead">
                    🎉 Congratulations <strong>@Model.Enrollment.FullName</strong>!<br />
                    You've successfully completed the course:<br />
                    <strong>@Model.Enrollment.CourseAdmin.Name</strong>
                </p>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Certificate" asp-action="DownloadCertificate" asp-route-id="@Model.Id" class="btn btn-certificate btn-download me-3">
                    <i class="fas fa-download me-2"></i>Download Certificate
                </a>

                <a asp-controller="Certificate" asp-action="ViewCertificate" asp-route-id="@Model.Id" class="btn btn-certificate btn-view">
                    <i class="fas fa-eye me-2"></i>View Certificate
                </a>
            </div>
        }
        else
        {
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-triangle me-2"></i>Certificate data not available. Please contact support.
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



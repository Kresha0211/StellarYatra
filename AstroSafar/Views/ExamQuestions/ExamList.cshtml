@model List<AstroSafar.Models.ExamQuestion>

@{
    ViewData["Title"] = "Manage Exam Questions";
}

<h2 class="text-center">Manage Exam Questions</h2>
<a asp-action="AddExam" class="btn btn-primary mb-3">Add New Question</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Course</th>
            <th>Question</th>
            <th>Options</th>
            <th>Correct Answer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Id</td>
                <td>@question.Course.Name</td>
                <td>@question.QuestionText</td>
                <td>
                    @foreach (var option in question.Options.Split(','))
                    {
                        <span class="badge bg-info">@option</span>
                    }
                </td>
                <td><b>@question.CorrectAnswer</b></td>
                <td>
                    <a asp-action="EditExam" asp-route-id="@question.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteExam" asp-route-id="@question.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this question?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>




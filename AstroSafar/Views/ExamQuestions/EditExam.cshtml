@model AstroSafar.Models.ExamQuestion
@{
    ViewData["Title"] = "Edit Question";
}

<h2>Edit Exam Question</h2>

<form asp-action="EditExam" asp-controller="ExamQuestions" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Question Text</label>
        <input type="text" asp-for="QuestionText" class="form-control" required>
    </div>

    <div class="form-group">
        <label>Options (comma separated)</label>
        <input type="text" asp-for="Options" class="form-control" required>
    </div>

    <div class="form-group">
        <label>Correct Answer</label>
        <input type="text" asp-for="CorrectAnswer" class="form-control" required>
    </div>

    <div class="form-group">
        <label>Question Type</label>
        <select asp-for="QuestionType" class="form-control">
            <option value="MCQ">MCQ</option>
            <option value="TrueFalse">True/False</option>
        </select>
    </div>

    <div class="form-group">
        <label>Select Course</label>
        <select asp-for="CourseId" class="form-control">
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.Id">@course.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Question</button>
</form>

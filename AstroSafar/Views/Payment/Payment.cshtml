


 @{
    ViewData["Title"] = "Make Payment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] | AstroSafar</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&family=Exo+2:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --space-light: #f0f5ff;
            --deep-sky: #e6f0ff;
            --nebula-purple-light: #c5b3dd;
            --cosmic-blue-light: #6699cc;
            --star-color: #4d94ff;
            --meteor-orange-light: #ff9966;
            --moon-silver: #e6e6e6;
            --planet-ring-light: rgba(102, 153, 204, 0.15);
        }

        body {
            background: linear-gradient(135deg, var(--space-light) 0%, var(--deep-sky) 100%);
            color: #333;
            font-family: 'Exo 2', sans-serif;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(2px 2px at 40px 70px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)), 
                            radial-gradient(2px 2px at 20px 100px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)), 
                            radial-gradient(1px 1px at 90px 40px, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0)), 
                            radial-gradient(1px 1px at 130px 80px, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0)), 
                            radial-gradient(1px 1px at 160px 120px, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0));
            background-repeat: repeat;
            background-size: 200px 200px;
            opacity: 0.3;
            z-index: -1;
            animation: twinkle 8s ease-in-out infinite;
        }

        .planet {
            position: absolute;
            border-radius: 50%;
            filter: blur(1px);
        }

        .planet-1 {
            width: 180px;
            height: 180px;
            background: radial-gradient(circle at 30% 40%, #a3c2f5, #d1e1fa);
            top: 10%;
            right: -60px;
            box-shadow: 0 0 40px rgba(77, 148, 255, 0.2);
        }

        .planet-2 {
            width: 100px;
            height: 100px;
            background: radial-gradient(circle at 30% 40%, #e5c1d5, #f2e1ec);
            bottom: 5%;
            left: -30px;
            box-shadow: 0 0 30px rgba(255, 153, 102, 0.2);
        }

        .planet-ring {
            position: absolute;
            width: 240px;
            height: 50px;
            border-radius: 50%;
            border: 8px solid var(--planet-ring-light);
            top: 60px;
            right: -90px;
            transform: rotate(-20deg);
        }

        .logo {
            font-family: 'Orbitron', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: #4d5b9e;
            text-align: center;
            margin-bottom: 0.5rem;
            text-shadow: 0 0 10px rgba(77, 148, 255, 0.7);
        }

        .payment-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 40px;
            border-radius: 16px;
            background-color: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(100, 100, 100, 0.15);
            border: 1px solid rgba(200, 200, 200, 0.3);
            position: relative;
            z-index: 10;
        }

        .payment-details {
            background: linear-gradient(135deg, rgba(102, 153, 204, 0.1) 0%, rgba(197, 179, 221, 0.1) 100%);
            padding: 25px;
            border-radius: 12px;
            margin: 30px 0;
            border: 1px dashed var(--cosmic-blue-light);
        }

        .payment-amount {
            font-family: 'Orbitron', sans-serif;
            font-size: 2.2rem;
            color: var(--cosmic-blue-light);
            margin: 15px 0;
            text-align: center;
        }

        .payment-description {
            text-align: center;
            margin-bottom: 25px;
            font-size: 1.1rem;
        }

        .payment-benefits {
            margin: 25px 0;
            padding-left: 20px;
        }

        .payment-benefits li {
            margin-bottom: 10px;
        }

        .user-nav {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-nav span {
            font-weight: 600;
            color: #4d5b9e;
        }

        .user-nav a {
            color: var(--meteor-orange-light);
            text-decoration: none;
            font-weight: 600;
        }

        .footer {
            background-color: rgba(255, 255, 255, 0.7);
            padding: 30px 0;
            margin-top: 50px;
            border-top: 1px solid rgba(200, 200, 200, 0.3);
        }

        .razorpay-payment-button {
            background: linear-gradient(135deg, var(--cosmic-blue-light) 0%, var(--nebula-purple-light) 100%) !important;
            border: none !important;
            color: white !important;
            font-family: 'Orbitron', sans-serif !important;
            letter-spacing: 1px !important;
            padding: 12px 25px !important;
            border-radius: 8px !important;
            font-weight: 600 !important;
            transition: all 0.3s ease !important;
            width: 100% !important;
            font-size: 1.1rem !important;
        }

        .razorpay-payment-button:hover {
            transform: translateY(-2px) !important;
            box-shadow: 0 7px 15px rgba(77, 148, 255, 0.3) !important;
        }

        @@keyframes twinkle {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
        }
    </style>
</head>
<body>
    <!-- Space elements -->
    <div class="planet planet-1"></div>
    <div class="planet-ring"></div>
    <div class="planet planet-2"></div>

  

    <div class="payment-container">
        <div class="logo">AstroSafar</div>
        <h2 class="text-center">Certificate Payment</h2>
        
        <div class="payment-details">
            <div class="payment-description">
                <i class="fas fa-certificate fa-2x text-warning mb-3"></i>
                <h4>Certificate of Completion</h4>
                <p>Secure your official certificate by completing the payment</p>
            </div>
            
            <div class="payment-amount">
                ₹499
            </div>

            <div class="payment-benefits">
                <h5>Your payment includes:</h5>
                <ul>
                    <li>Official digital certificate with unique ID</li>
                    <li>Lifetime access to your certificate</li>
                    <li>Shareable badge for your professional profiles</li>
                    <li>Certificate verification service</li>
                </ul>
            </div>

            <form id="payment-form" method="post" action="/Payment/PaymentCallback">
                <script src="https://checkout.razorpay.com/v1/checkout.js"
                        data-key="@ViewBag.Key"
                        data-amount="@ViewBag.Amount"
                        data-currency="INR"
                        data-order_id="@ViewBag.OrderId"
                        data-enrollment_id="@ViewBag.EnrollmentId"
                        data-buttontext="Pay Now - ₹499"
                        data-name="AstroSafar"
                        data-description="Certificate of Completion"
                        data-image="https://example.com/your_logo.jpg"
                        data-theme.color="#4d5b9e">
                </script>
                <input type="hidden" name="EnrollmentId" value="@ViewBag.EnrollmentId" />
            </form>
        </div>

        <div class="text-center mt-4">
            <p class="text-muted"><i class="fas fa-lock"></i> Secure payment processed by Razorpay</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
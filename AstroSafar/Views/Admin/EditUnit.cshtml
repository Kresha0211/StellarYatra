@model AstroSafar.Models.UnitAdmin
@{
    ViewBag.Title = "Edit Unit";
}

<h2>Edit Unit</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="EditUnit" asp-controller="Admin" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Unit Name</label>
        <input asp-for="Name" class="form-control" required />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <input asp-for="Content" class="form-control" required />
        <span class="text-danger" asp-validation-for="Content"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageURL" class="form-label">Upload Unit Image:</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        <span class="text-danger" asp-validation-for="ImageURL"></span>

        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" alt="Unit Image" class="img-thumbnail mt-2" width="150" />
        }
    </div>

    <div class="form-group">
        <label asp-for="VideoUrl">Video URL</label>
        <input asp-for="VideoUrl" class="form-control" />
        <span class="text-danger" asp-validation-for="VideoUrl"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId">Select Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control">
            <option value="">-- Select a Course --</option>
        </select>
        <span class="text-danger" asp-validation-for="CourseId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

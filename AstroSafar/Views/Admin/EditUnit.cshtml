@model AstroSafar.Models.UnitAdmin
@{
    ViewBag.Title = "Edit Unit";
}

<h2>Edit Unit</h2>

<form asp-action="EditUnit" method="post">
    <div class="form-group">
        <label for="Name">Unit Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label for="Content" class="form-label">Content</label>
        <input type="text" id="Content" name="Content" class="form-control" required placeholder="Content addition">
    </div>

    <div class="mb-3">
        <label for="ImageUrl" class="form-label">Upload Unit Image:</label>
        <input type="file" name="ImageUrl" class="form-control" accept="image/*" />
        <span class="text-danger" asp-validation-for="ImageURL"></span>
    </div>
    <div class="form-group">
        <label for="VideoUrl">Video URL</label>
        <input type="text" id="VideoUrl" name="VideoUrl" class="form-control" value="@Model.VideoUrl" />
    </div>


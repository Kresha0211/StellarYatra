@model AstroSafar.Models.UnitAdmin
@{
    ViewBag.Title = "Edit Unit";
}

<h2>Edit Unit</h2>

<form asp-action="EditUnit" method="post">
    <div class="form-group">
        <label for="Name">Unit Name</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="VideoUrl">Video URL</label>
        <input type="text" id="VideoUrl" name="VideoUrl" class="form-control" value="@Model.VideoUrl" />
    </div>

    <div class="form-group">
        <label asp-for="CourseAdmin" class="control-label"></label>
        <select asp-for="CourseAdmin" class="form-control" asp-items="ViewBag.CourseName">
            <option value="">Select Course</option>
        </select>
        <span asp-validation-for="CourseAdmin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

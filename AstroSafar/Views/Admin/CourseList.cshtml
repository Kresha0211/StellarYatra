@model IEnumerable<AstroSafar.Models.CourseAdmin>

<h2>Courses</h2>

<a class="btn btn-primary" asp-action="AddCourse">Add New Course</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@(course?.Category?.Name ?? "No Category")</td>
                    <td>@course.Description</td>
                    <td>@course.Duration</td>
                    <td>
                        <a class="btn btn-warning" asp-action="EditCourse" asp-route-id="@course.Id">Edit</a>
                        <form asp-action="DeleteCourse" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <input type="hidden" name="id" value="@course.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No courses available.</td>
            </tr>
        }
    </tbody>
</table>

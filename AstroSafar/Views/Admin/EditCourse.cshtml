@model AstroSafar.Models.CourseAdmin

@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Course</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCourse" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden Field for Course ID -->
            <input type="hidden" asp-for="Id" />

            <!-- Course Name -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Course Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Course Duration -->
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <!-- Category Dropdown (assuming ViewBag.Categories is passed from controller) -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <!--Image-->
            <div class="mb-3">
                <label for="ImageUrl" class="form-label">Upload Course Image:</label>
                <input type="file" name="ImageUrl" class="form-control" accept="image/*" />
                <span class="text-danger" asp-validation-for="ImageURL"></span>
            </div>
            <!-- Submit Button -->
            <div class="d-flex justify-content-between mt-3">
                <!-- Update Button -->
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Update
                </button>

                <!-- Back to List Button -->
                <a asp-action="CourseList" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

        </form>
    </div>
</div>


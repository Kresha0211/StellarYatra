@model IEnumerable<AstroSafar.Models.Category>

<h2>Categories</h2>

<a class="btn btn-primary" asp-action="AddCategory">Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="EditCategory" asp-route-id="@category.Id">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                    <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
            

        }
    </tbody>
</table>

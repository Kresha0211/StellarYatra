@model dynamic

@{
    ViewData["Title"] = "Enrollment Details";
}

<h2>Enrollment Details</h2>

<table class="table table-striped">
    <tr>
        <th>Full Name:</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Gender:</th>
        <td>@Model.Gender</td>
    </tr>
    <tr>
        <th>Date of Birth:</th>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Standard:</th>
        <td>@Model.Standard</td>
    </tr>
    <tr>
        <th>Address:</th>
        <td>@Model.Address</td>
    </tr>
</table>

<a href="@Url.Action("EnrolledUsers", "Admin")" class="btn btn-secondary">Back to List</a>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    :root {
        --light-bg: #f4f8fc;
        --accent: #007bff;
        --shadow: rgba(0, 0, 0, 0.07);
        --card-bg: #ffffff;
        --title: #2c3e50;
        --subtitle: #95a5a6;
    }

    h2 {
        color: #007bff;
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
    }


    body {
        background-color: var(--light-bg);
        font-family: 'Segoe UI', sans-serif;
        color: var(--title);
    }

    .dashboard-container {
        padding: 2rem;
    }

    .card-custom {
        background: var(--card-bg);
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 20px var(--shadow);
        padding: 20px;
        text-align: center;
    }

        .card-custom h5 {
            font-size: 24px;
            color: var(--accent);
        }

        .card-custom p {
            margin-top: 8px;
            color: var(--subtitle);
        }

    .section-title {
        margin: 40px 0 20px;
        font-weight: bold;
        color: var(--accent);
    }

    .map-placeholder {
        height: 300px;
        background: linear-gradient(to right, #e6f0ff, #ffffff);
        border-radius: 12px;
        text-align: center;
        line-height: 300px;
        color: #777;
        font-size: 1.2rem;
        box-shadow: 0 8px 20px var(--shadow);
    }
</style>

<div class="container dashboard-container">

    <h2 class="text-center mb-4">🚀 Admin Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card-custom">
                <h5>@ViewBag.TotalUsers</h5>
                <p>Register Users</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom">
                <h5>@ViewBag.TotalCourses</h5>
                <p>Courses Available</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom">
                <h5>@ViewBag.TotalCertificates</h5>
                <p>Certificates Issued</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom">
                <h5>@ViewBag.TotalBookBuyers</h5>
                <p>Book Issued</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize the map
        var map = L.map('spaceMap').setView([20.5937, 78.9629], 2); // Default to India-centered world view

        // Add OpenStreetMap tile layer
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        // Load location data
        fetch('/Admin/GetSpaceLocations')
            .then(response => response.json())
            .then(locations => {
                locations.forEach(loc => {
                    L.marker([loc.Latitude, loc.Longitude])
                        .addTo(map)
                        .bindPopup(`<strong>${loc.Name}</strong>`);
                });
            });
    });
</script>


<h4 class="section-title">📚 Recent Enrollments</h4>
<div class="card p-3">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>User Name</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in ViewBag.RecentEnrollments)
            {
                <tr>
                    <td>@enrollment.UserName</td>
                    <td>@enrollment.CourseName</td>
                </tr>
            }
        </tbody>
    </table>
</div>





<!-- Load Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="card p-4 mt-4 shadow rounded" style="max-width: 600px; margin: auto;">
    <h4 class="text-xl font-semibold mb-3 text-center">📊 Enrollments by Category</h4>
    <canvas id="categoryChart" width="400" height="400"></canvas>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        fetch("/Admin/GetEnrollmentDistribution")
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById("categoryChart").getContext("2d");
                new Chart(ctx, {
                    type: "doughnut",
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: "Enrollments",
                            data: data.counts,
                            backgroundColor: ["#4d94ff", "#00c897", "#ff9f40"],
                            borderColor: "#fff",
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: "bottom"
                            },
                            title: {
                                display: true,
                                text: "Enrollments by Course Category"
                            }
                        }
                    }
                });
            })
            .catch(error => {
                console.error("Error loading chart data:", error);
            });
    });
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stats-card {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            padding: 25px;
            border-radius: 10px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

            .stats-card h5 {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .stats-card p {
                font-size: 16px;
                margin: 0;
            }

        .charts-wrapper {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .chart-container {
            flex: 1;
            max-width: 48%;
        }
        /* .chart-container {
                            background: white;
                            padding: 25px;
                            border-radius: 10px;
                            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                            margin-bottom: 30px;
                        }

                            .chart-container h4 {
                                margin-bottom: 20px;
                                font-size: 20px;
                                color: #2c3e50;
                            } */

        .table-responsive {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .table th {
            background-color: #2c3e50;
            color: white;
            font-weight: 600;
        }

        .table td {
            font-weight: 500;
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 700;
        }

        h4 {
            color: #2c3e50;
            margin-bottom: 20px;
            font-size: 22px;
            font-weight: 600;
        }
    </style>
</head>
<body>



    <!-- Stats Cards -->
    <div class="stats-container">
        <div class="stats-card">
            <h5>@ViewBag.TotalUsers</h5>
            <p>Total Users Enrolled</p>
        </div>
        <div class="stats-card">
            <h5>@ViewBag.TotalCourses</h5>
            <p>Total Courses Available</p>
        </div>
        <div class="stats-card">
            <h5>@ViewBag.TotalCertificates</h5>
            <p>Certificates Issued</p>
        </div>
        <div class="stats-card">
            <h5>@ViewBag.TotalRevenue</h5>
            <p>Total Revenue (?)</p>
        </div>
    </div>

    <!-- Charts -->
    <div class="chart-container">
        <h4>User Growth Over Time</h4>
        <canvas id="userChart"></canvas>
    </div>
    A
    <div class="chart-container">
        <h4>Course Enrollments</h4>
        <canvas id="courseChart"></canvas>
    </div>

    <!-- Recent Enrollments Table -->
    <div class="table-responsive">
        <h4>Recent Enrollments</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Course Name</th>
                    <!-- <th>Enrollment Date</th> -->
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in ViewBag.RecentEnrollments)
                {
                    <tr>
                        <td>@enrollment.UserName</td>
                        <td>@enrollment.CourseName</td>
                        @*                             <!-- <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td> -->
                    *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>

    <script>
        var ctx1 = document.getElementById('userChart').getContext('2d');
        var userChart = new Chart(ctx1, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.UserGrowthMonths)),
                datasets: [{
                    label: 'User Growth',
                    data: @Html.Raw(Json.Serialize(ViewBag.UserGrowthCounts)),
                    borderColor: '#2575fc',
                    backgroundColor: 'rgba(37, 117, 252, 0.1)',
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e9ecef'
                        }
                    },
                    x: {
                        grid: {
                            color: '#e9ecef'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });

        var ctx2 = document.getElementById('courseChart').getContext('2d');
        var courseChart = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.CourseNames)),
                datasets: [{
                    label: 'Enrollments per Course',
                    data: @Html.Raw(Json.Serialize(ViewBag.CourseEnrollments)),
                    backgroundColor: '#6a11cb',
                    borderColor: '#6a11cb',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#e9ecef'
                        }
                    },
                    x: {
                        grid: {
                            color: '#e9ecef'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });
    </script>

</body>
</html>